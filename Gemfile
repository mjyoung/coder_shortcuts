gem 'cocoon' # better nested_form?
# gem 'nested_form'

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

group :development, :test do
  gem 'sqlite3'
  gem 'hirb'
  gem 'pry'
  gem 'better_errors'

  # so we can use: rails generate layout:install bootstrap3 --force
  gem 'rails_layout'

end

group :production do
  gem 'pg'
  gem 'rails_12factor'
end

