<h1>Listing shortcuts</h1>

<%= form_tag shortcuts_path, :method => 'get', :id => "shortcuts_search" do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search Tags", :tag => nil %>
  </p>
<% end %>

<div id="shortcuts_table">
  <%= render 'shortcuts_table' %>
</div>

<%= link_to 'New Shortcut', new_shortcut_path %>
