<%= simple_form_for(@shortcut) do |f| %>
  <% if @shortcut.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@shortcut.errors.count, "error") %> prohibited this shortcut from being saved:</h2>

      <ul>
      <% @shortcut.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <%= f.input :id, :as => :hidden %>
  <%= f.input :title, placeholder: 'Shortcut Title' %>
  <%= f.input :description, placeholder: 'Brief description for shortcut' %>
  <br />

    <%= f.simple_fields_for :steps do |builder| %>
      <%= render 'step_fields', :f => builder %>
      <div class="links">
        <%= link_to_add_association 'Add Step', f, :steps %>
      </div>
    <% end %>

    <%= f.simple_fields_for :tags do |builder| %>
      <%= render 'tag_fields', :f => builder %>
      <div class="links">
        <%= link_to_add_association 'Add Tag', f, :tags %>
      </div>
    <% end %>

    <br />

  <%= f.button :submit %>

  <% puts params %>

<% end %>